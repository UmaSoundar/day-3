CREATE DATABASE ORGANSATION;
USE ORGANSATION;
CREATE TABLE WORKERS
(
    WORKER_ID INT,
	FIRST_NAME VARCHAR(25),
	LAST_NAME VARCHAR(25),
	SALARY INT,
	JOINING_DATE DATETIME,
	DEPARTMENT VARCHAR(25)
);
select * from WORKERS 
