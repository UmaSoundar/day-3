SELECT * FROM WORKERS ORDER BY FIRST_NAME DESC , SALARY
CREATE SYNONYM WORKING FOR WORKERS
SELECT * FROM WORKING
CREATE DATABASE HAKUNA
USE HAKUNA
CREATE TABLE HAKUNAMATATA(ID INT IDENTITY,NAME VARCHAR(25),AGE VARCHAR(10),GRADUATION VARCHAR(25),YEAR_OF_PASSING VARCHAR(25),CONTACT_NO VARCHAR(20)
)
SELECT*FROM HAKUNAMATATA   
ALTER TABLE HAKUNAMATATA ADD DESIGNATION VARCHAR(20)
ALTER TABLE HAKUNAMATATA ADD SALARY VARCHAR(20)
SELECT LOWER(NAME)AS NAME FROM HAKUNAMATATA
SELECT *FROM HAKUNAMATATA ORDER BY( NAME )
CREATE SYNONYM HAKUNAMATATASOLUTION FOR HAKUNAMATATA
 SELECT * FROM HAKUNAMATATASOLUTION WHERE SALARY BETWEEN 20000 AND 50000
SELECT * FROM HAKUNAMATATASOLUTION
SELECT * FROM  HAKUNAMATATASOLUTION
                     
