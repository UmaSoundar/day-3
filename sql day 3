		select * from WORKERS  
		select upper(FIRST_NAME) as WORKER_NAME from WORKERS
		select upper(FIRST_NAME)from WORKERS
		select DISTINCT DEPARTMENT from WORKERS
		SELECT SUBSTRING(FIRST_NAME, 1, 3) AS ExtractString FROM WORKERS;
		SELECT CONCAT_WS('     ', FIRST_NAME , LAST_NAME ) AS 'COMPLETE_NAME' FROM WORKERS;
		select space(2) COMPLETE_NAME from WORKERS
		SELECT * FROM WORKERS WHERE FIRST_NAME IN ('vipul','satish');
		select * from WORKERS where  DEPARTMENT LIKE ('Admin%')
		select * from WORKERS where FIRST_NAME like('%a')
		select * from WORKERS where FIRST_NAME like('%a%')
		select count ( distinct SALARY ) as salary FROM WORKERS 
		SELECT GETDATE ()
		select avg(Salary) as 'Average Salary',DEPARTMENT from WORKERS group by DEPARTMENT HAVING DEPARTMENT='HR'
		select MIN(salary) as 'MINIMUN SALARY ',DEPARTMENT FROM WORKERS GROUP BY DEPARTMENT HAVING DEPARTMENT ='ADMIN'
		select MAX(salary)as maximum_salary ,DEPARTMENT FROM WORKERS GROUP BY DEPARTMENT HAVING DEPARTMENT ='HR'
		select COUNT(salary)as count_salary,DEPARTMENT FROM WORKERS GROUP BY DEPARTMENT HAVING DEPARTMENT ='ACCOUNT'
		select SUM(salary)as sum_salary, DEPARTMENT FROM WORKERS GROUP BY DEPARTMENT HAVING DEPARTMENT ='ADMIN'
